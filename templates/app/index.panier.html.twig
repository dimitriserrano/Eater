{% extends 'base.log.html.twig' %}

{% block title %}
    Votre panier
{% endblock %}

{% block body %}
    <div class="bg-light p-3">
        <h1>Votre panier</h1>
    </div>

    {% if items | length > 0 %}
        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Nom</th>
                    <th>Prix</th>
                    <th>Quantité</th>
                    <th>Total</th>
                </tr>
            </thead>
            <tbody>
                {% for item in items %}
                    <tr>
                        <td>{{ item.product.id }}</td>
                        <td>{{ item.product.name }}</td>
                        <td>{{ item.product.price }}</td>
                        <td>{{ item.quantity }}</td>
                        <td>{{ item.product.price * item.quantity }} €</td>
                        <td>
                            <a href="{{ path('panier_remove', {'id': item.product.id}) }}" class="btn btn-sm btn-danger">
                                <i class="fas fa-trash"></i>
                            </a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
            <tfoot>
                <tr>
                    <th colspan="4" class="text-right">
                        Total :
                    </th>
                    <th>{{ total }} €</th>
                    <th></th>
                </tr>
                <tr>
                    <th colspan="4" class="text-right">
                        TotalTTC :
                    </th>
                    <th>{{ total+2.5 }} €</th>
                    <th></th>
                </tr>
            </tfoot>
        </table>
    {% else %}
        <p>Sélectionne vite les plats que tu souhaites!</p>
    {% endif %}

{% endblock %}