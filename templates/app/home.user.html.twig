<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <link rel="stylesheet" href="https://bootswatch.com/4/minty/bootstrap.min.css">
        <link rel="stylesheet" href="{{ asset('CSS/style.css') }}">
    </head>
    <body>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
            <a class="navbar-brand" href="{{ path('home') }}">Tw'eater</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div  class="collapse navbar-collapse" id="navbarColor01">
                <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                    <a class="nav-link" href="{{ path('user', {'id': app.user.id}) }}">Mon profil
                    <span class="sr-only">(current)</span>
                    </a>
                </li>
                <li class="nav-item active">
                    <a class="nav-link" href="{{ path('app_logout') }}">Deconnection
                    <span class="sr-only">(current)</span>
                    </a>
                </li>
                <li class="nav-item active">
                    <a class="nav-link" href="{{ path('panier') }}">Panier
                    <span class="sr-only">(current)</span>
                    </a>
                </li>
                </ul>
            </div>
        </nav>
        <div class="jumbotron text-center">
            <h1>Tous les resto</h1>
        </div>

        <div class="container text-center">
            <h2>Restaurants a la une</h2>

            <div class="row justify-content-start mr-5 ml-5">
                {% for restaurant in restaurants %}
                    <div class="col-sm-4">
                        <div class="card border-primary mb-3" style="max-width: 40rem;">
                            <div class="card-body">
                                <h5 class="card-title">
                                    <a href="{{ path('product_show', {'id': restaurant.id}) }}" class="btn btn-primary">{{ restaurant.name }}</a>
                                </h5>
                                <img class="fit-picture" src={{ restaurant.picture }} style="max-width: 100%;">
                                <p class="card-text"> {{ restaurant.city }} </p>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </body>
</html>
